<div class="my-modal">
    <TelerikRootComponent>

        <GenericModalComponent Title="Parametrización - Bolsa de Tipologías" width="40%" IsVisible="modalStatus" Id="@IdModalIdentifier" OnModalClosed="HandleModalClosed">
            <ChildContent>

                <EditForm Model="@documentaryTypologiesBag" OnValidSubmit="HandleValidSubmit">


                    <div class="container mt-5">
                        <div style="display: flex; flex-wrap: wrap; justify-content: space-between; width: 100%; height: 100%;">


                            <!-- Primera fila -->

                            <div class="col-md-5">
                                <div class="cuadro-info">
                                    <InputModalComponent @ref="inputName" @bind-InputValue="documentaryTypologiesBag.TypologyName" IsRequired="true" LabelText="Nombre" Placeholder="Ingrese el Nombre" FieldType="ValidationType.Name" />
                                      <InputModalComponent @ref="inputDescription" @bind-InputValue="documentaryTypologiesBag.TypologyDescription" LabelText="Descripción" Placeholder="Ingrese la descripción" FieldType="ValidationType.None" />
                                </div>
                            </div>

                            <!-- Segunda columna -->
                            <div class="col-md-5">
                                <div class="cuadro-info">
                                    <InputModalComponent @ref="inputNivelSeguridad"  LabelText="Nivel de Seguridad" Placeholder="Ingrese Nivel de Seguridad" FieldType="ValidationType.None" />
                                     
                                </div>
                            </div>

              @*               <!-- Tercera columna -->
                            <div class="col-md-1">
                                <div class="cuadro-info">
                                    <label class="form-check-label" for="flexSwitchCheckDefault">Activo</label>
                                    <div class="form-check form-switch ">
                                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">

                                    </div>
                                </div>
                            </div> *@


                        </div>
                    </div>

                    <div class="row p-2">

                        <!-- Parte Derecha: Dos Botones -->
                        <div class="col-md-12 mt-4 ">
                            <div class="text-end">
                                <button class="botones limpiar" type="button" @onclick="ResetFormAsync">Limpiar</button>
                                <button class="botones guardar" type="submit">Guardar</button>
                            </div>
                        </div>
                    </div>

                </EditForm>

              <ModalNotificationsComponent @ref="notificationModal" OnModalClosed="HandleModalNotiClose"></ModalNotificationsComponent>

            </ChildContent>
        </GenericModalComponent>
    </TelerikRootComponent>
</div>


