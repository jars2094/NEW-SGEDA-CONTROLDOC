@using ControlDoc.Models.Models.Administration.Response;


<div class="my-modal">
    <TelerikRootComponent>
        <GenericModalComponent Title="Administración - Unidades Administrativas" IsVisible="modalStatus"  OnModalClosed="HandleModalClosed">
            <ChildContent>
                <EditForm Model="@adminUnitDtoResponse" OnValidSubmit="HandleValidSubmit">
                    <div class="row p-2">
                        <div class="col-md-6 mt-4">

                            <DropDownListTelerik @ref="idDocumental" SelectedValueint="@MySelectedDocVersions"
                                                 Id="VersionDocumental"
                                                 DefaultText="@Text"
                                                 Filterable="@true"
                                                 TextField="Name"
                                                 ValueField="DocumentalVersionId"
                                                 T="DocumentalVersionsDtoResponse"
                                                 Enabled="@UpdateForm"
                                                 Data="@docVersionList">
                            </DropDownListTelerik>
                        </div>
                        <!-- Parte Derecha: Dos Botones -->
                        <div class="col-md-6 mt-4 cuadro-botones">
                            <div class="d-flex gap-4">
                                <button class="botones limpiar" type="button" @onclick="ResetFormAsync">Limpiar</button>
                                
                                <button class="botones guardar" type="submit">Guardar</button>
                            </div>
                        </div>
                    </div>

                    <div class="container mt-5">
                        <div style="display: flex; flex-wrap: wrap; justify-content: space-between;">
                            <!-- Primera fila -->
                            <!-- Primera fila -->
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="cuadro-info">
                                        <InputModalComponent IsRequired="true" LabelText="Código" IsDisabled="@IsDisabledCode" Placeholder="Ingrese el Código" @bind-InputValue="@adminUnitDtoResponse.Code" FieldType="ValidationType.Code" @ref="codeinput" />
                                        <InputModalComponent LabelText="Descripción" @bind-InputValue="@adminUnitDtoResponse.Description" FieldType="ValidationType.None" Placeholder="Ingrese Descripción" @ref="descriptioninput" />
                                    </div>
                                </div>

                                <!-- Segunda columna -->
                                <div class="col-md-4">
                                    <div class="cuadro-info">

                                        <InputModalComponent IsRequired="true" @bind-InputValue="@adminUnitDtoResponse.Name"  LabelText="Nombre" Placeholder="Ingrese el Nombre" FieldType="ValidationType.Name" @ref="nameinput" />
                                        <InputModalComponent IsRequired="true" @bind-InputValue="@adminUnitDtoResponse.BossName" LabelText="Jefe" Placeholder="Ingrese el Jefe" IsDisabled=true FieldType="ValidationType.Name" @ref="Bossinput" />
                                    </div>
                                </div>

                                <!-- Tercera columna -->
                                <div class="col-md-4">
                                    <div class="cuadro-info">
                                        <div class="cuadro-info">
                                            <div class="form-check form-switch">
                                               <SwitchComponent @bind-CurrentValue="activeState" TextStateActive="Activo" TextStateDisabled="Inactivo" ShowText=false />
                                            </div>
                                            <div>
                                                <button class="botones guardar" type="button" @onclick="OpenNewModal">Agregar Jefe</button>
                                            </div>
                                        </div>

                                    </div>
                                </div>


                            </div>

                        </div>
                    </div>
                </EditForm>
                <ModalNotificationsComponent @ref="notificationModal" OnModalClosed="HandleModalNotiClose"></ModalNotificationsComponent>
            </ChildContent>
        </GenericModalComponent>
    </TelerikRootComponent>
</div>
