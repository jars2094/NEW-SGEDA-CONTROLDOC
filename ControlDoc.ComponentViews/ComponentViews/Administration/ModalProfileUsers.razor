@using ControlDoc.Components.Components.Switch


<div class="my-modal">
    
    <TelerikRootComponent>

        <GenericModalComponent Title="Administración - Perfiles de Funcionarios" IsVisible=ModalStatus Width="40%" OnModalClosed="HandleModalClosed">
            <ChildContent>
                <EditForm Model="@profileDtoRequest" OnValidSubmit="HandleValidSubmit">
                    <div class="container">
                        <!-- Parte Izquierda: Input y Label -->
                        <div class="col-md-5 col-sm-12">
                            <InputModalComponent IsVisible=true @ref ="profileId" InputValue="@IdProfile" IsRequired="false" LabelText="ID" Placeholder="Número de identificación" IsDisabled FieldType="ValidationType.NumbersOnly" />
                        </div>
                        <!-- Parte Derecha: Dos Botones -->
                        <div class="col-md-4 col-sm-12 pt-4">
                            <div class="text-end">
                                <button class="botones limpiar" type="button" @onclick="ResetFormAsync">Limpiar</button>
                                <button class="botones guardar" type="submit">Guardar</button>
                            </div>
                        </div>
                    </div>

                    <div class="container mt-5">
                        <div style="display: flex; flex-wrap: wrap; justify-content: space-between;">
                            <!-- Primera fila -->
                            <div class="row">
                                <div class="col-md-4 col-sm-12 mt-2">
                                    <div class="cuadro-info">
                                        <InputModalComponent IsVisible=true @ref="profileCode" @bind-InputValue="profileDtoRequest.ProfileCode" IsDisabled="@IsDisabledCode" IsRequired="true" LabelText="Código" Placeholder="Ingrese el código" FieldType="ValidationType.Code" />
                                    </div>
                                </div>

                                <!-- Segunda columna -->
                                <div class="col-md-4 col-sm-12 mt-2">
                                    <div class="cuadro-info">
                                        <InputModalComponent IsVisible=true @ref="profile1" @bind-InputValue="profileDtoRequest.Profile1" IsRequired="true" LabelText="Nombre" Placeholder="Nombre" FieldType="ValidationType.Name" />
                                    </div>
                                </div>

                                <!-- Tercera columna -->
                                <div class="col-md-4 col-sm-12 mt-2" style="align-items: flex-end; justify-content: flex-start; display: flex;">
                                    <div class="cuadro-info">
                                    
                                        <div class="input-container">
                                            <label>
                                                <TelerikSwitch @bind-Value="@stateValue" />  @(stateValue ? "Activo" : "Inactivo")
                                            </label>
                                        </div>
                                        
                                    </div>
                                </div>
                                <div class="col-md-8 col-sm-12 mt-2">
                                        <div class="cuadro-info">
                                            <div class="input-container">
                                                <label for="input1">Descripción</label>
                                            </div>
                                            <div class="input-container w-100">
                                                <textarea class="w-100 custom-textarea" id="description" placeholder="" maxlength="500" @bind="@description"></textarea>
                                            </div>
                                        </div>
                                    
                                </div>
                            </div>

                        
                        </div>
                    </div>
                </EditForm>
                <ModalNotificationsComponent @ref="notificationModal" OnModalClosed="HandleModalNotiClose"></ModalNotificationsComponent>

            </ChildContent>
        </GenericModalComponent>
    </TelerikRootComponent>
</div>