

<div class="mt-3">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card background-trasparent">
                
                    <div class="d-flex flex-column">
                       
                        <div class="d-flex flex-row align-items-stretch">
                            
                            <div class="flex-grow-1 d-flex flex-column me-1">
                                <!-- Primer input con la esquina superior izquierda con borde recto -->
                            <input type="text"
                                   class="form-control mb-1 flex-grow-1 custom-border custom-styles-input"
                                   placeholder="@captcha"
                                   aria-label="@captcha"
                                   readonly
                                   oncopy="return false"
                                   onpaste="return false">


                                <!-- Segundo input con la esquina superior izquierda con borde recto -->
                            <input type="text" class="form-control custom-border background-trasparent custom-white-font custom-input " placeholder=@setKeyName("ComponenteCaptcha") aria-label="Escribe el Captcha" @oninput="OnCaptchaInputChanged" maxlength="6" required>
                               

                            </div>
                            <div class="d-flex flex-column align-items-stretch btn-group-vertical">
                                <button class="btn btn-outline-secondary flex-grow-1 white-border white-icon custom-hover" id="button-addon3" type="button" @onclick="PeticionCaptcha" style="border-bottom-left-radius:0;">
                                    <i class="fas fa-sync-alt"></i>
                                </button>
                                <button class="btn btn-outline-secondary flex-grow-1 white-border white-icon custom-hover" id="button-addon1" type="button" style="border-bottom: none; border-top-right-radius: 0;">
                                    <i class="fas fa-question-circle"></i>
                                </button>
                                <button class="btn btn-outline-secondary flex-grow-1 white-border white-icon custom-hover" type="button" @onclick="onClickSpeak" style="border-top: 1px solid; border-bottom: 1px solid;">
                                    <i class="fa fa-volume-up"></i>
                                </button>

                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>




