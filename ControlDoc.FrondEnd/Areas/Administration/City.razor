<div class="container-fluid mt-5">
    <!-- Parte 1: Título y Contenido alineado a la izquierda -->
    <div class="row">
        <div class="col-8">
            <h1>Administración - Ciudad</h1>

        </div>
        <!-- Parte 2: Botón azul alineado a la derecha
        <@* div class="col-4 text-end">
            <button class="btn btn-primary btn-lg btn-block" @onclick="mostrarModal">Crear</button>
        </div> *@


        -->
    </div>
</div>

<!-- Parte 3: DropdownList Telerik -->

<div class="row">
    <div class="col-4">
      

        <label for="input2" style="margin-bottom:6px;">País: <span class="darkred">*</span></label>
        <TelerikDropDownList Data="@PaisesList"
                            @bind-Value="@IdPaises"
                             Id="GR_Pais"
                             TextField="name"
                             ValueField="countryId"
                             DefaultText="Seleccione un país..."
                             OnChange="GetState"
                             Filterable="true"
                             FilterOperator="StringFilterOperator.Contains">
        </TelerikDropDownList>

    
    </div>


    

    <div class="col-4">
       
        <label for="input2" style="margin-bottom:6px;">Seleccione un departamento* <span class="darkred">*</span></label>
        <TelerikDropDownList Data="@DepartamentosList"
                             @bind-Value="@IdDepartamento"
                             Id="GR_Departamento"
                             TextField="name"
                             ValueField="stateId"
                             DefaultText="Seleccione un departamento..."
                             OnChange="GetCity"
                             Enabled="@EnabledDepartamento"
                             Filterable="true"
                             FilterOperator="StringFilterOperator.Contains">
        </TelerikDropDownList>

       
    </div>
    <!-- Parte 3: Grilla -->
    <div class="row mt-4">
        <div class="col">
           @*  <GridControlDoc PageSize="10"
                            IsEditColumn="false"
                            DataObjectList="@CiudadList" T="@CityDtoResponse"
                            PropertyNames="@(new List<string> { "stateId", "codeNum" ,"codeTxt","name"})"
                            TitlesList="@(new List<string> { "ID","Codigo","Diminutivo","Nombre"})"
                            
                            >
            </GridControlDoc> *@

            <TelerikGrid Data="CiudadList" PageSize="10"
                         Sortable="true"
                         FilterMode="GridFilterMode.FilterMenu"
                         Resizable="true"
                         Reorderable="true"
                         EditMode="GridEditMode.Popup"
                         SelectionMode="GridSelectionMode.None">
                <GridColumns>
                    @* <GridCommandColumn Width="80px" Title="Editar" HeaderClass="center-wrap" Visible="true">
                    <GridCommandButton Icon="@SvgIcon.Pencil" OnClick="@((args)=> ShowModalEdit(args.Item as PermissionDtoResponse))"></GridCommandButton>
                    <GridCommandButton Icon="@SvgIcon.Trash" OnClick="@((args)=> ShowModalDelete(args.Item as PermissionDtoResponse))"></GridCommandButton>
                    </GridCommandColumn> *@
                    <GridColumn Field="cityId"
                                Title="ID"
                                Width="150px"
                                Filterable="true"
                                TextAlign="ColumnTextAlign.Center"
                                HeaderClass="center-wrap" />
                    <GridColumn Field="codeNum"
                                Title="Codigo"
                                Width="150px"
                                Filterable="true"
                                TextAlign="ColumnTextAlign.Center"
                                HeaderClass="center-wrap" />
                    <GridColumn Field="codeTxt"
                                Title="Diminutivo"
                                Width="150px"
                                Filterable="true"
                                TextAlign="ColumnTextAlign.Center"
                                HeaderClass="center-wrap" />
                    <GridColumn Field="name"
                                Title="Nombre"
                                Width="150px"
                                Filterable="true"
                                TextAlign="ColumnTextAlign.Center"
                                HeaderClass="center-wrap" />
                   


                </GridColumns>
                <NoDataTemplate>
                    <strong>No Data available / The data is still loading...</strong>
                </NoDataTemplate>
            </TelerikGrid>
        </div>
    </div>

    <!-- Parte 4: Botones en la izquierda, centro y derecha -->
    <div class="row mt-4">
        <div class="col-4">
            <button class="btn btn-secondary">Botón Izquierda</button>
        </div>
        <div class="col-4 text-center">
            <a href="tu_url">
                <img src="../img/paginacion.svg" alt="Texto Alternativo" class="img-fluid">
            </a>
        </div>
        <div class="col-4 text-end">
            <a href="tu_url">
                <img src="../img/botonExcel.svg" alt="Texto Alternativo" class="img-fluid">
            </a>
        </div>
    </div>



</div>



